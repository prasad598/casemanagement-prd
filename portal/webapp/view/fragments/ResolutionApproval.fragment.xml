							<layout:VerticalLayout width="100%">
								<layout:content>
									<Title class="h2Title" text="Uploaded Supporting Documents"/>
									<Label/>
									<HBox>
										<uf:FileUploader  visible = "false" style="Default" placeholder="Select File"/>
